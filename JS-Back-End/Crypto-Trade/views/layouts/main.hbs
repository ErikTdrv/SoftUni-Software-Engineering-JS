    <title>Home Page - Crypto Web</title>
    <link href="/static/css/styles.css" rel="stylesheet">
</head>

<body>
    <header class="header">
        <nav>
            <img src="./static/images/logo.png" class="logo">
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/all">All Crypto</a></li>
                {{#if user}}
