
        <main>
            <section id="deatils-page">
                <div class="wrapper">
                    <div class="product-img">
                        <img src={{house.imageUrl}}>
                    </div>
                    <div class="product-info">
                        <div class="product-text">
                            <div class="product-text">
                                <h1>Name: {{house.name}}</h1>
                                <h2>Type: {{house.type}}</h2>
                                <h4>Year: {{house.year}}</h4>
                                <h4>City: {{house.city}}</h4>
                                <p>Description: {{house.description}}</p>

                                <!-- if there are already tenants of the housing, separate their names with a comma and a space ", "  -->
                                {{#if house.rentedBy}}
                                <p>People rented this housing: {{house.rentedBy.name}}</p>

                                <!-- If not display: -->
                                {{else}}
                                <p>People rented this housing: There are no tenants yet.</p>
                                {{/if}}
                            </div>
                        </div>

                        <!-- if there is no registered user, do not display buttons-->
                        <div class="product-btn">
                            <!-- Only for registered user and creator of the housing offer-->
                            {{#if isOwn}}
                            <a href="/details/{{house._id}}/edit" class="edit">Edit</a>
                            <a href="/details/{{house._id}}/delete" class="remove">Delete</a>
                            {{else if house.pieces}}
                            {{#if user}}
                            <a href="/renthome/{{house._id}}" class="rentHome">Rent a home, available {{house.pieces}} housing</a>
                            {{/if}}
                            {{/if}}
                            <!-- logged in user with available pieces-->
                            {{#if alreadyRented}}
                            <p class="alRentHome">You have already rent this home</p>
                            {{/if}}
                            

                            <!-- logged in user with no available pieces-->
                            {{#if noMoreHousing}}
                            <p class="no-housing">No Housing Available!</p>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </section>
        </main>
