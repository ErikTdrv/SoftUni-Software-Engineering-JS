
<body>

    <div id="container">

        <section id="viewhotelDetails">
            <h2>Details</h2>
            <div class="hotel-ticket">
                <div class="hotel-left">
                    <img src="{{hotel.imageUrl}}"
                        alt="">
                </div>
                <div class="hotel-right">
                    <div>
                        <h3>{{hotel.name}}</h3>
                    </div>
                    <div>
                        {{hotel.city}}
                    </div>
                    <p><span >Free rooms: {{hotel.freeRooms}}</span> </p>
                    {{#if isBooked}}
                    <p><span class="green">You already have booked a room</span> </p>
                    {{else}}
                    {{#if user}}
                    <a href="/book/{{hotel._id}}" class="book">Book</a>
                    {{/if}}
                    {{/if}}
                    {{#if isOwner}}
                    <a href="/details/{{hotel._id}}/edit" class="edit">Edit</a>
                    <a href="/details/{{hotel._id}}/delete" class="remove">Delete</a>
                    {{/if}}
                </div>

            </div>
        </section>

        <footer>@SoftUni - JS Back-end - BookingUni 2020</footer>
    </div>

</body>
